<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.features.bankList.detail.DetailBankFragment"
    android:background="@color/colorPrimary"
    android:gravity="center_vertical">

   <androidx.appcompat.widget.AppCompatImageView
       android:id="@+id/detail_bank_image"
       android:layout_width="@dimen/dimenOf45dp"
       android:layout_height="@dimen/dimenOf45dp"
       android:layout_marginStart="@dimen/dimenOf16dp"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/detail_bank_name_text"
        android:layout_width="@dimen/dimenOf0dp"
        android:layout_height="@dimen/dimenOf90dp"
        android:layout_weight="1"
        android:textColor="@color/colorWhite"
        android:layout_marginStart="@dimen/dimenOf16dp"
        android:layout_marginEnd="@dimen/dimenOf16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/detail_bank_image"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>